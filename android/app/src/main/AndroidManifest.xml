<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.myreactnativeapp">

    <application
        android:name=".MainApplication"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:theme="@style/AppTheme">  <!-- Ensure the application uses AppTheme -->
        
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:exported="true"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize|locale|layoutDirection|uiMode"
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/SplashTheme"> <!-- Set the activity to use SplashTheme -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>
</manifest>
